<Window x:Class="BallMusicManager.Player.MessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BallMusicManager.Player"
        mc:Ignorable="d"
        Title="MessageWindow" Height="800" Width="450">
    <StackPanel Margin="16">
        <Label>News</Label>
        <TextBox x:Name="NewsBox" DockPanel.Dock="Left" MaxLines="1"/>
        <Button x:Name="SendNews" HorizontalAlignment="Center" Click="SendNews_Click" MinWidth="128" Margin="0 8 0 16">Send</Button>
        <Label>Message</Label>
        <TextBox x:Name="MessageBox" AcceptsReturn="True" TextWrapping="WrapWithOverflow"/>
        <Button x:Name="SendMessage" HorizontalAlignment="Center" Click="SendMessage_Click" MinWidth="128" Margin="0 8 0 16">Send</Button>
    </StackPanel>
</Window>
